@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow mt-5">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-shield-alt fa-3x text-danger"></i>
                    </div>
                    
                    <h2 class="h4 text-danger mb-3">Access Denied</h2>
                    
                    <p class="text-muted mb-4">
                        Your email address is not authorized to access this application.
                    </p>

                    @if (ViewData["Email"] != null)
                    {
                        <div class="alert alert-info">
                            <strong>Email used:</strong> @ViewData["Email"]
                        </div>
                    }

                    <div class="mb-4">
                        <p class="text-muted">
                            Please contact your system administrator to request access to the QuokkaServiceRegistry application.
                        </p>
                    </div>

                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
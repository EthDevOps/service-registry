@model QuokkaServiceRegistry.Models.CatalogVendor

@{
    ViewData["Title"] = "Vendor Details";
    var services = ViewData["Services"] as List<CatalogService> ?? new List<CatalogService>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewData["Title"] - @Model.Name</h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Main Information -->
                <div class="col-lg-8">
                    <!-- Basic Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle"></i> Basic Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4">Vendor Name:</dt>
                                        <dd class="col-sm-8"><strong>@Model.Name</strong></dd>
                                        
                                        <dt class="col-sm-4">Vendor ID:</dt>
                                        <dd class="col-sm-8"><code>@Model.Id</code></dd>
                                        
                                        <dt class="col-sm-4">Website:</dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.WebsiteUrl))
                                            {
                                                <a href="@Model.WebsiteUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-external-link-alt"></i> Visit Website
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No website provided</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Address Information -->
                    @if (!string.IsNullOrEmpty(Model.Country) || !string.IsNullOrEmpty(Model.City))
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-map-marker-alt"></i> Address Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-3">Location:</dt>
                                    <dd class="col-sm-9">
                                        <i class="fas fa-map-marker-alt text-primary"></i>
                                        @Model.City, @Model.Country
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    }

                    <!-- Payment Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-credit-card"></i> Payment Information
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.PaymentMethod != null)
                            {
                                <dl class="row">
                                    <dt class="col-sm-3">Payment Method:</dt>
                                    <dd class="col-sm-9">
                                        @switch (Model.PaymentMethod.Type)
                                        {
                                            case PaymentMethodType.CreditCard:
                                                <i class="fas fa-credit-card text-primary me-2"></i>
                                                <span class="badge bg-primary">@Model.PaymentMethod.Type</span>
                                                break;
                                            case PaymentMethodType.BankTransfer:
                                                <i class="fas fa-university text-success me-2"></i>
                                                <span class="badge bg-success">@Model.PaymentMethod.Type</span>
                                                break;
                                            case PaymentMethodType.SEPA:
                                                <i class="fas fa-euro-sign text-info me-2"></i>
                                                <span class="badge bg-info">@Model.PaymentMethod.Type</span>
                                                break;
                                            case PaymentMethodType.Prepaid:
                                                <i class="fas fa-gift-card text-warning me-2"></i>
                                                <span class="badge bg-warning text-dark">@Model.PaymentMethod.Type</span>
                                                break;
                                        }
                                    </dd>
                                    
                                    <dt class="col-sm-3">Name:</dt>
                                    <dd class="col-sm-9">
                                        <strong>@Model.PaymentMethod.Name</strong>
                                        <a asp-controller="Payment" asp-action="Details" asp-route-id="@Model.PaymentMethod.Id" class="btn btn-outline-primary btn-sm ms-2">
                                            <i class="fas fa-eye"></i> View Details
                                        </a>
                                    </dd>
                                    
                                    @if (!string.IsNullOrEmpty(Model.PaymentMethod.Description))
                                    {
                                        <dt class="col-sm-3">Description:</dt>
                                        <dd class="col-sm-9">@Model.PaymentMethod.Description</dd>
                                    }
                                    
                                    @if (Model.PaymentMethod.CostCenter != null)
                                    {
                                        <dt class="col-sm-3">Cost Center:</dt>
                                        <dd class="col-sm-9">
                                            <span class="badge bg-secondary">@Model.PaymentMethod.CostCenter.Name</span>
                                            @if (!string.IsNullOrEmpty(Model.PaymentMethod.CostCenter.Code))
                                            {
                                                <small class="text-muted ms-1">(@Model.PaymentMethod.CostCenter.Code)</small>
                                            }
                                        </dd>
                                    }
                                    
                                    <dt class="col-sm-3">Payment Status:</dt>
                                    <dd class="col-sm-9">
                                        @if (Model.PaymentMethod.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </dd>
                                </dl>
                            }
                            else
                            {
                                <div class="text-center py-3">
                                    <i class="fas fa-credit-card text-muted fa-2x mb-2"></i>
                                    <p class="text-muted mb-0">No payment method assigned to this vendor</p>
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm mt-2">
                                        <i class="fas fa-plus"></i> Assign Payment Method
                                    </a>
                                </div>
                            }
                            
                            <hr>
                            <dl class="row">
                                <dt class="col-sm-3">Vendor Status:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>


                    <!-- Services Using This Vendor -->
                    @if (services.Any())
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-server"></i> Services Using This Vendor
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover">
                                        <thead>
                                            <tr>
                                                <th>Service Name</th>
                                                <th>Type</th>
                                                <th>Current Stage</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var service in services)
                                            {
                                                <tr>
                                                    <td><strong>@service.Name</strong></td>
                                                    <td>
                                                        @if (service.IsPropriety)
                                                        {
                                                            <span class="badge bg-warning">Proprietary</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success">Open Source</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-primary">@service.Lifecycle?.CurrentStage</span>
                                                    </td>
                                                    <td>
                                                        <a asp-controller="CatalogService" asp-action="Details" asp-route-id="@service.Id" class="btn btn-outline-info btn-sm">
                                                            <i class="fas fa-eye"></i> View
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-server"></i> Services Using This Vendor
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="text-center py-3">
                                    <i class="fas fa-server fa-2x text-muted mb-3"></i>
                                    <p class="text-muted">No services are currently using this vendor.</p>
                                    <a asp-controller="CatalogService" asp-action="Create" class="btn btn-outline-primary">
                                        <i class="fas fa-plus"></i> Create Service for This Vendor
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Quick Stats -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-chart-pie"></i> Quick Stats
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <small class="text-muted">Total Services</small><br>
                                <span class="h4">@services.Count</span>
                            </div>
                            
                            
                            <div class="mb-3">
                                <small class="text-muted">Vendor Status</small><br>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                            
                            @if (services.Any())
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Service Types</small><br>
                                    <span class="badge bg-warning">@services.Count(s => s.IsPropriety) Proprietary</span>
                                    <span class="badge bg-success">@services.Count(s => !s.IsPropriety) Open Source</span>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-address-book"></i> Contact Information
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.WebsiteUrl))
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Website</small><br>
                                    <a href="@Model.WebsiteUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-external-link-alt"></i> Visit Website
                                    </a>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.Country) || !string.IsNullOrEmpty(Model.City))
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Location</small><br>
                                    <i class="fas fa-map-marker-alt text-primary"></i>
                                    @Model.City, @Model.Country
                                </div>
                            }
                            
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-cogs"></i> Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit Vendor
                                </a>
                                <a asp-controller="CatalogService" asp-action="Create" class="btn btn-outline-success">
                                    <i class="fas fa-plus"></i> Add Service
                                </a>
                                <hr>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i> Delete Vendor
                                </a>
                                <button type="button" class="btn btn-outline-info" onclick="exportVendor()">
                                    <i class="fas fa-download"></i> Export Data
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportVendor() {
            // TODO: Implement vendor data export functionality
            alert('Vendor export functionality will be implemented in a future update.');
        }
    </script>
}
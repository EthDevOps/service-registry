@model IEnumerable<QuokkaServiceRegistry.Models.CatalogVendor>

@{
    ViewData["Title"] = "Vendor Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewData["Title"]</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Vendor
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        Website
                                    </th>
                                    <th>
                                        Location
                                    </th>
                                    <th>
                                        Billing Type
                                    </th>
                                    <th>
                                        GDPR Agreement
                                    </th>
                                    <th>
                                        Services Count
                                    </th>
                                    <th width="200">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vendor in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => vendor.Name)</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(vendor.WebsiteUrl))
                                            {
                                                <a href="@vendor.WebsiteUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-external-link-alt"></i> Visit
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No website</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(vendor.Country) || !string.IsNullOrEmpty(vendor.City))
                                            {
                                                <span>@vendor.City, @vendor.Country</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No address</span>
                                            }
                                        </td>
                                        <td>
                                            @if (vendor.BillingInformation != null)
                                            {
                                                <span class="badge bg-info">@vendor.BillingInformation.Type</span>
                                                @if (vendor.BillingInformation.IsActive)
                                                {
                                                    <span class="badge bg-success ms-1">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary ms-1">Inactive</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">No billing info</span>
                                            }
                                        </td>
                                        <td>
                                            @if (vendor.GdprProcessingAgreementExists)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check"></i> Agreement Exists
                                                </span>
                                                @if (!string.IsNullOrEmpty(vendor.ProcessingAgreementLink))
                                                {
                                                    <a href="@vendor.ProcessingAgreementLink" target="_blank" class="btn btn-outline-info btn-sm ms-1">
                                                        <i class="fas fa-file-contract"></i>
                                                    </a>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle"></i> No Agreement
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">
                                                @{
                                                    // This would be populated by the controller in a real implementation
                                                    var serviceCount = 0; // Placeholder
                                                }
                                                @serviceCount services
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@vendor.Id" class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@vendor.Id" class="btn btn-outline-primary btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@vendor.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-building fa-3x text-muted"></i>
                            </div>
                            <h4 class="text-muted">No vendors registered yet</h4>
                            <p class="text-muted">Start building your vendor database by adding your first vendor.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add Your First Vendor
                            </a>
                        </div>
                    }
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-building fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count()</div>
                                        <div class="small">Total Vendors</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-shield-alt fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count(v => v.GdprProcessingAgreementExists)</div>
                                        <div class="small">GDPR Compliant</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-credit-card fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count(v => v.BillingInformation != null && v.BillingInformation.IsActive)</div>
                                        <div class="small">Active Billing</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-globe fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count(v => !string.IsNullOrEmpty(v.WebsiteUrl))</div>
                                        <div class="small">With Websites</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript for filtering, sorting, or AJAX operations here
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
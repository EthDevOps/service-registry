@model QuokkaServiceRegistry.Models.PaymentMethod

@{
    ViewData["Title"] = "Payment Method Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">
                        @switch (Model.Type)
                        {
                            case PaymentMethodType.CreditCard:
                                <i class="fas fa-credit-card text-primary"></i>
                                break;
                            case PaymentMethodType.BankTransfer:
                                <i class="fas fa-university text-success"></i>
                                break;
                            case PaymentMethodType.SEPA:
                                <i class="fas fa-euro-sign text-info"></i>
                                break;
                            case PaymentMethodType.Prepaid:
                                <i class="fas fa-gift-card text-warning"></i>
                                break;
                        }
                        @Model.Name
                    </h1>
                    <p class="text-muted mb-0">Payment method details and linked vendors</p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Payment Method Information -->
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle"></i> Payment Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <strong>Name:</strong>
                                </div>
                                <div class="col-md-9">
                                    @Model.Name
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <strong>Type:</strong>
                                </div>
                                <div class="col-md-9">
                                    <span class="badge bg-secondary">@Model.Type</span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <strong>Cost Center:</strong>
                                </div>
                                <div class="col-md-9">
                                    @Model.CostCenter?.Name
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        <strong>Description:</strong>
                                    </div>
                                    <div class="col-md-9">
                                        @Model.Description
                                    </div>
                                </div>
                            }
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <strong>Status:</strong>
                                </div>
                                <div class="col-md-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <strong>Created:</strong>
                                </div>
                                <div class="col-md-9">
                                    @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                </div>
                            </div>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        <strong>Last Updated:</strong>
                                    </div>
                                    <div class="col-md-9">
                                        @Model.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")
                                    </div>
                                </div>
                            }

                            <!-- Payment Type Specific Details -->
                            @if (Model.Type == PaymentMethodType.CreditCard)
                            {
                                <hr />
                                <h6 class="text-primary">
                                    <i class="fas fa-credit-card"></i> Credit Card Details
                                </h6>
                                @if (!string.IsNullOrEmpty(Model.CardHolderName))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Card Holder:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.CardHolderName
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.CardNumber))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Card Number:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            **** **** **** @Model.CardNumber.Substring(Math.Max(0, Model.CardNumber.Length - 4))
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.ExpiryDate))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Expiry:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.ExpiryDate
                                        </div>
                                    </div>
                                }
                            }

                            @if (Model.Type == PaymentMethodType.BankTransfer)
                            {
                                <hr />
                                <h6 class="text-success">
                                    <i class="fas fa-university"></i> Bank Transfer Details
                                </h6>
                                @if (!string.IsNullOrEmpty(Model.BankName))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Bank Name:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.BankName
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.AccountNumber))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Account Number:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.AccountNumber
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.RoutingNumber))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Routing Number:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.RoutingNumber
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Swift))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>SWIFT:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.Swift
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Iban))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>IBAN:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.Iban
                                        </div>
                                    </div>
                                }
                            }

                            @if (Model.Type == PaymentMethodType.SEPA)
                            {
                                <hr />
                                <h6 class="text-info">
                                    <i class="fas fa-euro-sign"></i> SEPA Details
                                </h6>
                                @if (!string.IsNullOrEmpty(Model.SepaMandateId))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Mandate ID:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.SepaMandateId
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.SepaCreditorId))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Creditor ID:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.SepaCreditorId
                                        </div>
                                    </div>
                                }
                                @if (Model.SepaMandateDate.HasValue)
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Mandate Date:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.SepaMandateDate.Value.ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Iban))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>IBAN:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.Iban
                                        </div>
                                    </div>
                                }
                            }

                            @if (Model.Type == PaymentMethodType.Prepaid)
                            {
                                <hr />
                                <h6 class="text-warning">
                                    <i class="fas fa-gift-card"></i> Prepaid Details
                                </h6>
                                @if (!string.IsNullOrEmpty(Model.PrepaidVoucherCode))
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Voucher Code:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.PrepaidVoucherCode
                                        </div>
                                    </div>
                                }
                                @if (Model.PrepaidBalance.HasValue)
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Balance:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            $@Model.PrepaidBalance.Value.ToString("F2")
                                        </div>
                                    </div>
                                }
                                @if (Model.PrepaidExpiryDate.HasValue)
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <strong>Expiry Date:</strong>
                                        </div>
                                        <div class="col-md-9">
                                            @Model.PrepaidExpiryDate.Value.ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <!-- Linked Services -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-building"></i> Linked Services
                                <span class="badge bg-primary ms-2">@Model.Services.Count</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (!Model.Services.Any())
                            {
                                <div class="text-center py-3">
                                    <i class="fas fa-building text-muted" style="font-size: 2rem;"></i>
                                    <p class="text-muted mt-2 mb-0">No vendors using this payment method</p>
                                </div>
                            }
                            else
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var vendor in Model.Services)
                                    {
                                        <div class="list-group-item px-0">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">@vendor.Name</h6>
                                                    @if (!string.IsNullOrEmpty(vendor.VendorCity) && !string.IsNullOrEmpty(vendor.VendorCountry))
                                                    {
                                                        <small class="text-muted">@vendor.VendorCity, @vendor.VendorCountry</small>
                                                    }
                                                </div>
                                                <small class="text-muted">
                                                    <a asp-controller="CatalogService" asp-action="Details" asp-route-id="@vendor.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </small>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-cogs"></i> Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit Payment Method
                                </a>
                                @if (!Model.Services.Any())
                                {
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i> Delete Payment Method
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-outline-danger" disabled title="Cannot delete payment method with linked vendors">
                                        <i class="fas fa-trash"></i> Delete Payment Method
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
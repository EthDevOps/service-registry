@model QuokkaServiceRegistry.Models.PaymentMethod

@{
    ViewData["Title"] = "Delete Payment Method";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">
                        <i class="fas fa-exclamation-triangle text-danger"></i> Delete Payment Method
                    </h1>
                    <p class="text-muted mb-0">Are you sure you want to delete this payment method?</p>
                </div>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <div class="col-lg-8">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-trash"></i> Confirm Deletion
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Warning:</strong> This action cannot be undone. All payment method data will be permanently deleted.
                            </div>

                            <!-- Payment Method Summary -->
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <strong>Name:</strong>
                                </div>
                                <div class="col-md-9">
                                    @switch (Model.Type)
                                    {
                                        case PaymentMethodType.CreditCard:
                                            <i class="fas fa-credit-card text-primary me-2"></i>
                                            break;
                                        case PaymentMethodType.BankTransfer:
                                            <i class="fas fa-university text-success me-2"></i>
                                            break;
                                        case PaymentMethodType.SEPA:
                                            <i class="fas fa-euro-sign text-info me-2"></i>
                                            break;
                                        case PaymentMethodType.Prepaid:
                                            <i class="fas fa-gift-card text-warning me-2"></i>
                                            break;
                                    }
                                    @Model.Name
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <strong>Type:</strong>
                                </div>
                                <div class="col-md-9">
                                    <span class="badge bg-secondary">@Model.Type</span>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <strong>Cost Center:</strong>
                                </div>
                                <div class="col-md-9">
                                    @Model.CostCenter?.Name
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="row mb-4">
                                    <div class="col-md-3">
                                        <strong>Description:</strong>
                                    </div>
                                    <div class="col-md-9">
                                        @Model.Description
                                    </div>
                                </div>
                            }
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <strong>Status:</strong>
                                </div>
                                <div class="col-md-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <strong>Created:</strong>
                                </div>
                                <div class="col-md-9">
                                    @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                </div>
                            </div>

                            @if (Model.Vendors.Any())
                            {
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <strong>Cannot Delete:</strong> This payment method is currently linked to @Model.Vendors.Count vendor(s). 
                                    You must remove this payment method from all vendors before deletion.
                                </div>
                            }
                            else
                            {
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-trash"></i> Yes, Delete Payment Method
                                        </button>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                            <i class="fas fa-times"></i> Cancel
                                        </a>
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>

                <!-- Linked Vendors Info -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-building"></i> Linked Vendors
                                <span class="badge bg-primary ms-2">@Model.Vendors.Count</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (!Model.Vendors.Any())
                            {
                                <div class="text-center py-3">
                                    <i class="fas fa-check-circle text-success" style="font-size: 2rem;"></i>
                                    <p class="text-success mt-2 mb-0">No vendors linked</p>
                                    <small class="text-muted">This payment method can be safely deleted</small>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <strong>Linked Vendors Found:</strong><br>
                                    You must unlink this payment method from the following vendors before deletion:
                                </div>
                                <div class="list-group list-group-flush">
                                    @foreach (var vendor in Model.Vendors)
                                    {
                                        <div class="list-group-item px-0">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">@vendor.Name</h6>
                                                    @if (!string.IsNullOrEmpty(vendor.City) && !string.IsNullOrEmpty(vendor.Country))
                                                    {
                                                        <small class="text-muted">@vendor.City, @vendor.Country</small>
                                                    }
                                                </div>
                                                <small class="text-muted">
                                                    <a asp-controller="CatalogVendor" asp-action="Edit" asp-route-id="@vendor.Id" class="btn btn-sm btn-outline-primary" title="Edit vendor to remove payment method">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </small>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Deletion Steps -->
                    @if (Model.Vendors.Any())
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-list-ol"></i> Steps to Delete
                                </h5>
                            </div>
                            <div class="card-body">
                                <ol class="mb-0">
                                    <li>Edit each linked vendor</li>
                                    <li>Change or remove the payment method</li>
                                    <li>Save the vendor changes</li>
                                    <li>Return here to delete this payment method</li>
                                </ol>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@model QuokkaServiceRegistry.Models.SoftwareLicense

@{
    ViewData["Title"] = "Create License";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-balance-scale"></i> Create New License
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label">License Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="e.g., MIT License" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Abbreviation" class="form-label">Abbreviation</label>
                                    <input asp-for="Abbreviation" class="form-control" placeholder="e.g., MIT" />
                                    <span asp-validation-for="Abbreviation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LicenseUrl" class="form-label">License URL</label>
                            <input asp-for="LicenseUrl" class="form-control" placeholder="https://opensource.org/licenses/MIT" />
                            <span asp-validation-for="LicenseUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of the license"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Type" class="form-label">License Type</label>
                                    <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<LicenseType>()">
                                        <option value="">Select a type</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CompatibilityLevel" class="form-label">Compatibility Level</label>
                                    <select asp-for="CompatibilityLevel" class="form-select" asp-items="Html.GetEnumSelectList<CompatibilityLevel>()">
                                        <option value="">Select compatibility level</option>
                                    </select>
                                    <span asp-validation-for="CompatibilityLevel" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input class="form-check-input" asp-for="IsCopyleft" />
                                    <label class="form-check-label" asp-for="IsCopyleft">
                                        Is Copyleft License
                                    </label>
                                    <div class="form-text">Copyleft licenses require derivative works to be distributed under the same license</div>
                                </div>

                                <div class="form-check mb-3">
                                    <input class="form-check-input" asp-for="IsOsiApproved" />
                                    <label class="form-check-label" asp-for="IsOsiApproved">
                                        OSI Approved
                                    </label>
                                    <div class="form-text">Approved by the Open Source Initiative</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input class="form-check-input" asp-for="RequiresAttribution" />
                                    <label class="form-check-label" asp-for="RequiresAttribution">
                                        Requires Attribution
                                    </label>
                                    <div class="form-text">Must include copyright notice and license text</div>
                                </div>

                                <div class="form-check mb-3">
                                    <input class="form-check-input" asp-for="RequiresSourceDisclosure" />
                                    <label class="form-check-label" asp-for="RequiresSourceDisclosure">
                                        Requires Source Disclosure
                                    </label>
                                    <div class="form-text">Must provide source code when distributing</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create License
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
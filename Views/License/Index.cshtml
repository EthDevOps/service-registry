@model IEnumerable<QuokkaServiceRegistry.Models.SoftwareLicense>

@{
    ViewData["Title"] = "Software Licenses";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewData["Title"]</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New License
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Abbreviation</th>
                                    <th>Type</th>
                                    <th>Copyleft</th>
                                    <th>OSI Approved</th>
                                    <th>Attribution Required</th>
                                    <th>Source Disclosure</th>
                                    <th>Compatibility</th>
                                    <th width="200">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                @Html.DisplayFor(modelItem => item.Abbreviation)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(item.Type == LicenseType.OpenSource ? "bg-success" : "bg-secondary")">
                                                @Html.DisplayFor(modelItem => item.Type)
                                            </span>
                                        </td>
                                        <td>
                                            @if (item.IsCopyleft)
                                            {
                                                <span class="badge bg-warning">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">No</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsOsiApproved)
                                            {
                                                <span class="badge bg-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">No</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.RequiresAttribution)
                                            {
                                                <span class="badge bg-info">Required</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Not Required</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.RequiresSourceDisclosure)
                                            {
                                                <span class="badge bg-warning">Required</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Not Required</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @(item.CompatibilityLevel == CompatibilityLevel.High ? "bg-success" : 
                                                                  item.CompatibilityLevel == CompatibilityLevel.Medium ? "bg-warning" : 
                                                                  item.CompatibilityLevel == CompatibilityLevel.Low ? "bg-danger" : "bg-dark")">
                                                @Html.DisplayFor(modelItem => item.CompatibilityLevel)
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-balance-scale fa-3x text-muted"></i>
                            </div>
                            <h4 class="text-muted">No licenses registered yet</h4>
                            <p class="text-muted">Start building your license catalog by adding your first license.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add Your First License
                            </a>
                        </div>
                    }
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-balance-scale fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count()</div>
                                        <div class="small">Total Licenses</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-code-branch fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count(l => l.Type == LicenseType.OpenSource)</div>
                                        <div class="small">Open Source</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-recycle fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count(l => l.IsCopyleft)</div>
                                        <div class="small">Copyleft</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-certificate fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count(l => l.IsOsiApproved)</div>
                                        <div class="small">OSI Approved</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}
@model QuokkaServiceRegistry.Models.CatalogService

@{
    ViewData["Title"] = "Edit Service";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewData["Title"]</h1>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="LifecycleId" />
                
                <div class="row">
                    <div class="col-lg-8">
                        <!-- Basic Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-info-circle"></i> Basic Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group mb-3">
                                            <label asp-for="Name" class="form-label"></label>
                                            <input asp-for="Name" class="form-control" placeholder="Enter service name" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <div class="form-check mt-4">
                                                <input asp-for="IsPropriety" class="form-check-input" />
                                                <label asp-for="IsPropriety" class="form-check-label">
                                                    Is Proprietary Software
                                                </label>
                                            </div>
                                            <div class="form-check mt-2">
                                                <input asp-for="IsPublic" class="form-check-input" />
                                                <label asp-for="IsPublic" class="form-check-label">
                                                    Make Publicly Visible
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsPropriety" class="text-danger"></span>
                                            <span asp-validation-for="IsPublic" class="text-danger"></span>
                                            <div class="form-text">Check to make this service visible to non-authenticated users</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Service Description -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-file-alt"></i> Service Description
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="Description" class="form-label">Description (Optional)</label>
                                    <textarea asp-for="Description" class="form-control" rows="5" 
                                              placeholder="Enter a detailed description of what this service does (optional)."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <div class="form-text">
                                        Provide a detailed description to help users understand what this service does and its key features.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Vendor Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-building"></i> Vendor Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="VendorName" class="form-label">Vendor Name</label>
                                    <input asp-for="VendorName" class="form-control" />
                                    <span asp-validation-for="VendorName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="VendorWebsiteUrl" class="form-label">Vendor Website URL</label>
                                    <input asp-for="VendorWebsiteUrl" class="form-control" type="url" />
                                    <span asp-validation-for="VendorWebsiteUrl" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="VendorCountry" class="form-label">Vendor Country</label>
                                            <input asp-for="VendorCountry" class="form-control" />
                                            <span asp-validation-for="VendorCountry" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="VendorCity" class="form-label">Vendor City</label>
                                            <input asp-for="VendorCity" class="form-control" />
                                            <span asp-validation-for="VendorCity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- License Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-certificate"></i> License Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="LicenseId" class="form-label">Select License</label>
                                    <select asp-for="LicenseId" class="form-select" asp-items="ViewBag.LicenseId">
                                        <option value="">-- Select License --</option>
                                    </select>
                                    <span asp-validation-for="LicenseId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <!-- Hosting Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-server"></i> Hosting Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="HostingType" class="form-label">Hosting Type</label>
                                            <select asp-for="HostingType" class="form-select" asp-items="Html.GetEnumSelectList<CatalogHostingType>()"></select>
                                            <span asp-validation-for="HostingType" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="HostingCountry" class="form-label">Hosting Country</label>
                                            <input asp-for="HostingCountry" class="form-control" />
                                            <span asp-validation-for="HostingCountry" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="SaasRegionReference" class="form-label">SaaS Region (Optional)</label>
                                            <input asp-for="SaasRegionReference" class="form-control" />
                                            <span asp-validation-for="SaasRegionReference" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-4">
                        <!-- Current Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-info"></i> Current Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>Service ID:</strong> @Model.Id
                                </div>
                                @if (!string.IsNullOrEmpty(Model.VendorName))
                                {
                                    <div class="mb-3">
                                        <strong>Current Vendor:</strong><br>
                                        <span class="badge bg-info">@Model.VendorName</span>
                                    </div>
                                }
                                @if (Model.License != null)
                                {
                                    <div class="mb-3">
                                        <strong>Current License:</strong><br>
                                        <span class="badge bg-secondary">@Model.License.Name</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Optional Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-plus-circle"></i> Optional Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Subscription -->
                                <div class="form-group mb-3">
                                    <label asp-for="SubscriptionId" class="form-label">Subscription (Optional)</label>
                                    <select asp-for="SubscriptionId" class="form-select" asp-items="ViewBag.SubscriptionId">
                                        <option value="">-- No Subscription --</option>
                                    </select>
                                    <span asp-validation-for="SubscriptionId" class="text-danger"></span>
                                </div>

                                <!-- GDPR Register -->
                                <div class="form-group mb-3">
                                    <label asp-for="GdprRegisterId" class="form-label">GDPR Register (Optional)</label>
                                    <select asp-for="GdprRegisterId" class="form-select" asp-items="ViewBag.GdprRegisterId">
                                        <option value="">-- No GDPR Register --</option>
                                    </select>
                                    <span asp-validation-for="GdprRegisterId" class="text-danger"></span>
                                </div>

                                <!-- Payment Method -->
                                <div class="form-group mb-3">
                                    <label asp-for="PaymentMethodId" class="form-label">Payment Method (Optional)</label>
                                    <select asp-for="PaymentMethodId" class="form-select" asp-items="ViewBag.PaymentMethodId">
                                        <option value="">-- No Payment Method --</option>
                                    </select>
                                    <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Audit Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-history"></i> Audit Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <small class="text-muted">
                                    Last modified: Just now<br>
                                    Created: @DateTime.Now.ToString("yyyy-MM-dd")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <a asp-action="Index" class="btn btn-secondary">
                                            <i class="fas fa-times"></i> Cancel
                                        </a>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                            <i class="fas fa-eye"></i> View Details
                                        </a>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Save Changes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}
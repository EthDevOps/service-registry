@model QuokkaServiceRegistry.Models.CatalogService

@{
    ViewData["Title"] = "Edit Service";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewData["Title"]</h1>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="LifecycleId" />
                
                <div class="row">
                    <div class="col-lg-8">
                        <!-- Basic Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-info-circle"></i> Basic Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group mb-3">
                                            <label asp-for="Name" class="form-label"></label>
                                            <input asp-for="Name" class="form-control" placeholder="Enter service name" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <div class="form-check mt-4">
                                                <input asp-for="IsPropriety" class="form-check-input" />
                                                <label asp-for="IsPropriety" class="form-check-label">
                                                    Is Proprietary Software
                                                </label>
                                            </div>
                                            <div class="form-check mt-2">
                                                <input asp-for="IsPublic" class="form-check-input" />
                                                <label asp-for="IsPublic" class="form-check-label">
                                                    Make Publicly Visible
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsPropriety" class="text-danger"></span>
                                            <span asp-validation-for="IsPublic" class="text-danger"></span>
                                            <div class="form-text">Check to make this service visible to non-authenticated users</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Service Description -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-file-alt"></i> Service Description
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="Description" class="form-label">Description (Optional)</label>
                                    <textarea asp-for="Description" class="form-control" rows="5" 
                                              placeholder="Enter a detailed description of what this service does (optional)."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <div class="form-text">
                                        Provide a detailed description to help users understand what this service does and its key features.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Vendor Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-building"></i> Vendor Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="VendorName" class="form-label">Vendor Name</label>
                                    <input asp-for="VendorName" class="form-control" />
                                    <span asp-validation-for="VendorName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="VendorWebsiteUrl" class="form-label">Vendor Website URL</label>
                                    <input asp-for="VendorWebsiteUrl" class="form-control" type="url" />
                                    <span asp-validation-for="VendorWebsiteUrl" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="VendorCountry" class="form-label">Vendor Country</label>
                                            <input asp-for="VendorCountry" class="form-control" />
                                            <span asp-validation-for="VendorCountry" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="VendorCity" class="form-label">Vendor City</label>
                                            <input asp-for="VendorCity" class="form-control" />
                                            <span asp-validation-for="VendorCity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- License Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-certificate"></i> License Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="LicenseId" class="form-label">Select License</label>
                                    <select asp-for="LicenseId" class="form-select" asp-items="ViewBag.LicenseId">
                                        <option value="">-- Select License --</option>
                                    </select>
                                    <span asp-validation-for="LicenseId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <!-- Hosting Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-server"></i> Hosting Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="HostingType" class="form-label">Hosting Type</label>
                                            <select asp-for="HostingType" class="form-select" asp-items="Html.GetEnumSelectList<CatalogHostingType>()"></select>
                                            <span asp-validation-for="HostingType" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="HostingCountry" class="form-label">Hosting Country</label>
                                            <input asp-for="HostingCountry" class="form-control" />
                                            <span asp-validation-for="HostingCountry" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="SaasRegionReference" class="form-label">SaaS Region (Optional)</label>
                                            <input asp-for="SaasRegionReference" class="form-control" />
                                            <span asp-validation-for="SaasRegionReference" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-4">
                        <!-- Current Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-info"></i> Current Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>Service ID:</strong> @Model.Id
                                </div>
                                @if (!string.IsNullOrEmpty(Model.VendorName))
                                {
                                    <div class="mb-3">
                                        <strong>Current Vendor:</strong><br>
                                        <span class="badge bg-info">@Model.VendorName</span>
                                    </div>
                                }
                                @if (Model.License != null)
                                {
                                    <div class="mb-3">
                                        <strong>Current License:</strong><br>
                                        <span class="badge bg-secondary">@Model.License.Name</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Optional Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-plus-circle"></i> Optional Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Subscription - Managed through detailed subscription workflow -->
                                <input type="hidden" asp-for="SubscriptionId" />
                                <div class="form-group mb-3">
                                    <label class="form-label">Subscription Management</label>
                                    @if (Model.Subscription != null)
                                    {
                                        <div class="alert alert-success">
                                            <i class="fas fa-credit-card"></i>
                                            <strong>@Model.Subscription.Name</strong><br>
                                            <small>@Model.Subscription.SeatsUsed/@Model.Subscription.SeatsAvailable seats used • $@Model.Subscription.CostPerSeatUsd per seat</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-light">
                                            <i class="fas fa-plus-circle"></i>
                                            No subscription configured for this service.
                                        </div>
                                    }
                                    <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#subscriptionModal">
                                        <i class="fas fa-cog"></i> @(Model.Subscription != null ? "Manage" : "Configure") Subscription
                                    </button>
                                </div>

                                <!-- GDPR Register - Direct management -->
                                <input type="hidden" asp-for="GdprRegisterId" />
                                <div class="form-group mb-3">
                                    <label class="form-label">GDPR Compliance Management</label>
                                    @if (Model.GdprRegister != null)
                                    {
                                        <div class="alert alert-success">
                                            <i class="fas fa-shield-alt"></i>
                                            <strong>GDPR compliance configured</strong><br>
                                            <small>
                                                @if (Model.GdprRegister.ProcessesEmployeePii || Model.GdprRegister.ProcessesExternalUserPii)
                                                {
                                                    <span class="badge bg-warning text-dark">Processes PII</span>
                                                }
                                                @if (Model.GdprRegister.ProcessesSensitiveData)
                                                {
                                                    <span class="badge bg-danger">Sensitive Data</span>
                                                }
                                                @if (Model.GdprRegister.Controller != null)
                                                {
                                                    <span class="badge bg-info">Controller: @Model.GdprRegister.Controller.Name</span>
                                                }
                                            </small>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-light">
                                            <i class="fas fa-info-circle"></i>
                                            No GDPR compliance information configured for this service.
                                        </div>
                                    }
                                    <div class="d-flex gap-2">
                                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="openGdprInNewTab()">
                                            <i class="fas fa-shield-alt"></i> @(Model.GdprRegister != null ? "Edit" : "Configure") GDPR Compliance
                                        </button>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm" target="_blank">
                                            <i class="fas fa-external-link-alt"></i> View Full Details
                                        </a>
                                    </div>
                                </div>

                                <!-- Payment Method -->
                                <div class="form-group mb-3">
                                    <label asp-for="PaymentMethodId" class="form-label">Payment Method (Optional)</label>
                                    <select asp-for="PaymentMethodId" class="form-select" asp-items="ViewBag.PaymentMethodId">
                                        <option value="">-- No Payment Method --</option>
                                    </select>
                                    <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Audit Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-history"></i> Audit Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <small class="text-muted">
                                    Last modified: Just now<br>
                                    Created: @DateTime.Now.ToString("yyyy-MM-dd")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <a asp-action="Index" class="btn btn-secondary">
                                            <i class="fas fa-times"></i> Cancel
                                        </a>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                            <i class="fas fa-eye"></i> View Details
                                        </a>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Save Changes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Subscription Management Modal -->
<div class="modal fade" id="subscriptionModal" tabindex="-1" aria-labelledby="subscriptionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="subscriptionForm" asp-action="SetSubscription" method="post">
                <input type="hidden" name="serviceId" value="@Model.Id" />
                <div class="modal-header">
                    <h5 class="modal-title" id="subscriptionModalLabel">
                        <i class="fas fa-credit-card"></i> Subscription Management
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="subscriptionName" class="form-label">Subscription Name</label>
                                <input type="text" class="form-control" id="subscriptionName" name="subscriptionName" 
                                       value="@(Model.Subscription?.Name ?? "")" placeholder="Enter subscription name" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="costPerSeat" class="form-label">Cost per Seat (USD)</label>
                                <input type="number" class="form-control" id="costPerSeat" name="costPerSeat" 
                                       value="@(Model.Subscription?.CostPerSeatUsd ?? 0)" step="0.01" min="0" placeholder="0.00" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="seatsAvailable" class="form-label">Seats Available</label>
                                <input type="number" class="form-control" id="seatsAvailable" name="seatsAvailable" 
                                       value="@(Model.Subscription?.SeatsAvailable ?? 0)" min="0" placeholder="0" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="seatsUsed" class="form-label">Seats Used</label>
                                <input type="number" class="form-control" id="seatsUsed" name="seatsUsed" 
                                       value="@(Model.Subscription?.SeatsUsed ?? 0)" min="0" placeholder="0" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="termDurationMonths" class="form-label">Term Duration (Months)</label>
                                <input type="number" class="form-control" id="termDurationMonths" name="termDurationMonths" 
                                       value="@(Model.Subscription?.TermDuration.Days / 30 ?? 12)" min="1" placeholder="12" />
                                <div class="form-text">Contract duration in months</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Monthly Cost</label>
                                <div class="form-control-plaintext bg-light p-2 rounded">
                                    <span id="monthlyCost">$0.00</span>
                                    <small class="text-muted d-block">Seats Used × Cost per Seat</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.Subscription != null)
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="removeSubscription" name="removeSubscription" value="true" />
                                    <label class="form-check-label text-danger" for="removeSubscription">
                                        Remove subscription from this service
                                    </label>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Subscription
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <script>
        // Calculate monthly cost dynamically
        function updateMonthlyCost() {
            const seatsUsed = parseFloat(document.getElementById('seatsUsed').value) || 0;
            const costPerSeat = parseFloat(document.getElementById('costPerSeat').value) || 0;
            const monthlyCost = seatsUsed * costPerSeat;
            document.getElementById('monthlyCost').textContent = '$' + monthlyCost.toFixed(2);
        }

        // Update monthly cost on input change
        document.getElementById('seatsUsed').addEventListener('input', updateMonthlyCost);
        document.getElementById('costPerSeat').addEventListener('input', updateMonthlyCost);
        
        // Initialize monthly cost on page load
        document.addEventListener('DOMContentLoaded', updateMonthlyCost);
        
        // Validate seats used doesn't exceed seats available
        document.getElementById('seatsUsed').addEventListener('input', function() {
            const seatsUsed = parseInt(this.value) || 0;
            const seatsAvailable = parseInt(document.getElementById('seatsAvailable').value) || 0;
            
            if (seatsUsed > seatsAvailable && seatsAvailable > 0) {
                this.setCustomValidity('Seats used cannot exceed seats available');
            } else {
                this.setCustomValidity('');
            }
        });
        
        // Function to open GDPR management in new tab
        function openGdprInNewTab() {
            const serviceId = '@Model.Id';
            const detailsUrl = '@Url.Action("Details", "CatalogService", new { id = Model.Id })';
            const newWindow = window.open(detailsUrl, '_blank');
            
            // Set a flag in sessionStorage to indicate we should open GDPR modal
            sessionStorage.setItem('openGdprModal', 'true');
            
            // Focus the new window
            if (newWindow) {
                newWindow.focus();
            }
        }
    </script>
}
@model QuokkaServiceRegistry.Models.CatalogService

@{
    ViewData["Title"] = "Delete Service";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-danger">@ViewData["Title"]</h1>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning" role="alert">
                                <h5 class="alert-heading">
                                    <i class="fas fa-exclamation-triangle"></i> Warning!
                                </h5>
                                <p>You are about to permanently delete the service <strong>"@Model.Name"</strong>.</p>
                                <hr>
                                <p class="mb-0">This action cannot be undone. All associated data will be permanently removed.</p>
                            </div>

                            <h6>Service Details:</h6>
                            <dl class="row">
                                <dt class="col-sm-3">Service Name:</dt>
                                <dd class="col-sm-9"><strong>@Model.Name</strong></dd>
                                
                                <dt class="col-sm-3">Service ID:</dt>
                                <dd class="col-sm-9"><code>@Model.Id</code></dd>
                                
                                @if (!string.IsNullOrEmpty(Model.VendorName))
                                {
                                    <dt class="col-sm-3">Vendor:</dt>
                                    <dd class="col-sm-9">@Model.VendorName</dd>
                                }
                                
                                @if (Model.License != null)
                                {
                                    <dt class="col-sm-3">License:</dt>
                                    <dd class="col-sm-9">
                                        <span class="badge bg-info">@Model.License.Abbreviation</span>
                                        @Model.License.Name
                                    </dd>
                                }
                                
                                <dt class="col-sm-3">Hosting:</dt>
                                <dd class="col-sm-9">
                                    <span class="badge @(Model.HostingType == CatalogHostingType.SaaS ? "bg-success" : "bg-warning")">
                                        @Model.HostingType
                                    </span>
                                    in @Model.HostingCountry
                                </dd>
                                
                                @if (Model.Lifecycle != null)
                                {
                                    <dt class="col-sm-3">Current Stage:</dt>
                                    <dd class="col-sm-9">
                                        <span class="badge bg-primary">@Model.Lifecycle.CurrentStage</span>
                                    </dd>
                                }
                                
                                <dt class="col-sm-3">Type:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsPropriety)
                                    {
                                        <span class="badge bg-warning">Proprietary</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Open Source</span>
                                    }
                                </dd>
                            </dl>

                            @if (Model.Subscription != null)
                            {
                                <div class="alert alert-info" role="alert">
                                    <h6 class="alert-heading">
                                        <i class="fas fa-credit-card"></i> Active Subscription
                                    </h6>
                                    <p class="mb-0">
                                        This service has an active subscription: <strong>@Model.Subscription.Name</strong><br>
                                        <small>@Model.Subscription.SeatsUsed/@Model.Subscription.SeatsAvailable seats used</small>
                                    </p>
                                </div>
                            }

                            @if (Model.GdprRegister != null)
                            {
                                <div class="alert alert-warning" role="alert">
                                    <h6 class="alert-heading">
                                        <i class="fas fa-shield-alt"></i> GDPR Data Register
                                    </h6>
                                    <p class="mb-0">
                                        This service has an associated GDPR data register that will also be deleted.
                                        Ensure compliance requirements are met before proceeding.
                                    </p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-body">
                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="Id" />
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                            <i class="fas fa-eye"></i> View Details
                                        </a>
                                        <a asp-action="Index" class="btn btn-secondary">
                                            <i class="fas fa-times"></i> Cancel
                                        </a>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-danger" 
                                            onclick="return confirm('Are you absolutely sure you want to delete this service? This action cannot be undone.')">
                                        <i class="fas fa-trash"></i> Yes, Delete Service
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}
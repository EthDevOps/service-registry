@model IEnumerable<QuokkaServiceRegistry.Models.CatalogService>

@{
    ViewData["Title"] = "Service Catalog";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewData["Title"]</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Service
                </a>
            </div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-filter"></i> Filters
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="form-label">Search</label>
                                    <input type="text" name="searchTerm" class="form-control" 
                                           placeholder="Search services, vendors, licenses..." 
                                           value="@ViewBag.CurrentFilters?.SearchTerm" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="form-label">Hosting Type</label>
                                    <select name="hostingType" class="form-select">
                                        <option value="">All Types</option>
                                        @foreach (var item in ViewBag.HostingTypes as List<SelectListItem>)
                                        {
                                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="form-label">Hosting Country</label>
                                    <select name="hostingCountry" class="form-select">
                                        <option value="">All Countries</option>
                                        @foreach (var item in ViewBag.HostingCountries as List<SelectListItem>)
                                        {
                                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="form-label">&nbsp;</label>
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i> Filter
                                        </button>
                                        <a asp-action="Index" class="btn btn-outline-secondary">
                                            <i class="fas fa-times"></i> Clear
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Visibility
                                    </th>
                                    <th>
                                        Vendor
                                    </th>
                                    <th>
                                        License
                                    </th>
                                    <th>
                                        Hosting Details
                                    </th>
                                    <th>
                                        Current Stage
                                    </th>
                                    <th>
                                        Proprietary
                                    </th>
                                    <th>
                                        GDPR
                                    </th>
                                    <th>
                                        Subscription
                                    </th>
                                    <th>
                                        Payment Method
                                    </th>
                                    <th width="200">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                        </td>
                                        <td>
                                            @if (item.IsPublic)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-globe"></i> Public
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-lock"></i> Private
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VendorName)
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                @Html.DisplayFor(modelItem => item.License.Abbreviation)
                                            </span>
                                            @Html.DisplayFor(modelItem => item.License.Name)
                                        </td>
                                        <td>
                                            <div class="mb-1">
                                                <span class="badge @(item.HostingType == CatalogHostingType.SaaS ? "bg-success" : "bg-warning")">
                                                    @Html.DisplayFor(modelItem => item.HostingType)
                                                </span>
                                            </div>
                                            <small class="text-muted">
                                                <i class="fas fa-globe"></i> @Html.DisplayFor(modelItem => item.HostingCountry)
                                                @if (!string.IsNullOrEmpty(item.SaasRegionReference))
                                                {
                                                    <br /><i class="fas fa-map-marker-alt"></i> @item.SaasRegionReference
                                                }
                                                @if (item.OnpremiseHosts != null && item.OnpremiseHosts.Any())
                                                {
                                                    <text><br /><i class="fas fa-server"></i> @item.OnpremiseHosts.Count host(s)</text>
                                                }
                                            </small>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">
                                                @Html.DisplayFor(modelItem => item.Lifecycle.CurrentStage)
                                            </span>
                                        </td>
                                        <td>
                                            @if (item.IsPropriety)
                                            {
                                                <span class="badge bg-warning">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">No</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.GdprRegister != null)
                                            {
                                                <span class="badge bg-info">Registered</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Subscription != null)
                                            {
                                                <span class="badge bg-success">
                                                    @item.Subscription.SeatsUsed/@item.Subscription.SeatsAvailable seats
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.PaymentMethod != null)
                                            {
                                                <span class="badge bg-primary">
                                                    @item.PaymentMethod.Name
                                                </span>
                                                <br><small class="text-muted">@item.PaymentMethod.Type</small>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-server fa-3x text-muted"></i>
                            </div>
                            <h4 class="text-muted">No services registered yet</h4>
                            <p class="text-muted">Start building your service catalog by adding your first service.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add Your First Service
                            </a>
                        </div>
                    }
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-server fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count()</div>
                                        <div class="small">Total Services</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-cloud fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count(s => s.HostingType == CatalogHostingType.SaaS)</div>
                                        <div class="small">SaaS Services</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-building fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count(s => s.HostingType == CatalogHostingType.SelfHosted)</div>
                                        <div class="small">Self-Hosted</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-shield-alt fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="h4 mb-0">@Model.Count(s => s.GdprRegister != null)</div>
                                        <div class="small">GDPR Registered</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Hosting Details Row -->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-globe"></i> Hosting by Country
                                </h6>
                            </div>
                            <div class="card-body">
                                @{
                                    var hostingByCountry = Model.GroupBy(s => s.HostingCountry)
                                        .Select(g => new { Country = g.Key, Count = g.Count() })
                                        .OrderByDescending(x => x.Count)
                                        .Take(5);
                                }
                                @foreach (var item in hostingByCountry)
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span>@item.Country</span>
                                        <span class="badge bg-primary">@item.Count</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-server"></i> On-Premise Infrastructure
                                </h6>
                            </div>
                            <div class="card-body">
                                @{
                                    var totalOnPremHosts = Model.Where(s => s.OnpremiseHosts != null)
                                        .Sum(s => s.OnpremiseHosts.Count);
                                    var servicesWithOnPrem = Model.Count(s => s.OnpremiseHosts != null && s.OnpremiseHosts.Any());
                                }
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>Total Hosts</span>
                                    <span class="badge bg-warning">@totalOnPremHosts</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>Services with On-Prem</span>
                                    <span class="badge bg-info">@servicesWithOnPrem</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>Pure SaaS Services</span>
                                    <span class="badge bg-success">@(Model.Count() - servicesWithOnPrem)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}
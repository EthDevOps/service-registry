@{
    ViewData["Title"] = "QuokkaServiceRegistry";
}

@if (User.Identity?.IsAuthenticated == true)
{
    <!-- Authenticated User Dashboard -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div>
                        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                        <p class="mb-0">Welcome back, @(User.Identity.Name ?? User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Services</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <a href="@Url.Action("Index", "CatalogService")" class="text-decoration-none">
                                        Manage Services
                                    </a>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-server fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Vendors</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <a href="@Url.Action("Index", "CatalogVendor")" class="text-decoration-none">
                                        Manage Vendors
                                    </a>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-building fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Licenses</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <a href="@Url.Action("Index", "License")" class="text-decoration-none">
                                        Manage Licenses
                                    </a>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-certificate fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Payments</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <a href="@Url.Action("Index", "Payment")" class="text-decoration-none">
                                        Manage Payments
                                    </a>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-credit-card fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Unauthenticated User Landing Page -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="py-5">
                    <h1 class="display-4 mb-4">
                        <i class="fas fa-server text-primary"></i>
                        QuokkaServiceRegistry
                    </h1>
                    <p class="lead mb-4">
                        A comprehensive service catalog and vendor management system for tracking, 
                        managing, and maintaining your organization's software services and vendor relationships.
                    </p>
                    
                    <div class="row mb-5">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="fas fa-server fa-3x text-primary mb-3"></i>
                                    <h5>Service Management</h5>
                                    <p class="text-muted">Track and manage your software services with comprehensive lifecycle information.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="fas fa-building fa-3x text-success mb-3"></i>
                                    <h5>Vendor Relations</h5>
                                    <p class="text-muted">Maintain detailed vendor information and manage business relationships.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="fas fa-shield-alt fa-3x text-info mb-3"></i>
                                    <h5>GDPR Compliance</h5>
                                    <p class="text-muted">Ensure compliance with comprehensive data processing and privacy management.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg px-5">
                            <i class="fas fa-sign-in-alt"></i> Sign In to Get Started
                        </a>
                    </div>

                    <small class="text-muted">
                        Access is restricted to authorized users only.<br>
                        Contact your administrator if you need access.
                    </small>
                </div>
            </div>
        </div>
    </div>
}